pipeline {
        agent none
    stages {


            stage('mvn') {
                agent {
                    docker {
                        image 'maven:3.3.3'
                    }
                }
                steps {
                    sh 'mvn --version'
                }
            }


            stage('npm') {
                agent {
                    docker {
                        image 'maven:3.3.3'
                    }
                }
                steps {
                    sh 'npm --version'
                }
            }
    }
}
pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('create file with Date'){
            steps {
                retry(2) {
                    sh 'date > output.txt'
                    sh 'echo output.txt'
                    sh 'sleep 10s'
                }
            }
        }
    }
}
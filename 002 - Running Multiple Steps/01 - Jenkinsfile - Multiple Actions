pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('create file with Date'){
            steps {
                retry(2) {
                    date()
                }
            }
        }
    }
}

def date(){
    sh 'date >> output.txt'
    sh 'cat output.txt'
    sh 'sleep 10s'
}
pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                scripts {
                	def buildConfigs = readJSON file: '004 - Using Environment Variables/03 - JsonFile.json'
                	buildConfigs.each{ buildConfig ->
                		sh "echo '$buildConfig.name'"
                		$buildConfig.command
					}
                }
            }
        }
    }
}
pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                script {
                	def buildConfigs = readJSON file: '004 - Using Environment Variables/03 - JsonFile.json'
                	buildConfigs.each{ buildConfig ->
                		stage("${buildConfig.name}")
                		{
                		    buildConfig.command
                		}
					}
                }
            }
        }
    }
}
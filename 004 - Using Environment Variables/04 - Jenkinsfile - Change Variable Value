pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    environment {
        NUMBER_OF_ISSUES = ''
    }
    stages {
            stage('test') {
                steps {
                    env.NUMBER_OF_ISSUES  = '10'
                }
            }

            stage('notification') {
                steps {
                    echo "$NUMBER_OF_ISSUES"
                }
            }
    }
}
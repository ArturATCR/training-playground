pipeline {
    agent {
        dockerfile {
            filename '02 - Jenkinsfile - Dockerfile Agent'
            dir '003 - Defining Execution Environments'
            args '-e ENV_VARIABLE="Value for build" '
        }
	}
    stages {
        stage('build') {
            steps {
                sh 'if [ "$ENV_VARIABLE" != "Value for execution" ]; then exit 1; fi'
            }
        }
    }
}
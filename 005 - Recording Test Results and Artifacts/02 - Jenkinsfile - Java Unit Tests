pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    tools {
        maven 'Maven 3.3.9'
        jdk 'jdk8'
    }
    stages {
        stage('tests') {
            steps{
                configFileProvider( [configFile(fileId: 'settings.xml', variable: 'MAVEN_SETTINGS')]){
                    sh 'mvn -s $MAVEN_SETTINGS clean package'
                }
            }

        }
    }
}